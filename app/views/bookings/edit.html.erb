<div class="container-fluid new-background" style="background-image: url('https://res.cloudinary.com/dy3nldgkf/image/upload/v1550790796/fzpjarehbsr3c6jjuwqi.jpg')">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <h1>Edit your booking</h1>
      <%= simple_form_for @booking do |f| %>
      <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker", id: "range_start" } %>
      <%= f.input :end_date, as: :string, as: :hidden, required: false, input_html: {class: "datepicker", id: "range_end" }  %>
      <%= f.submit "update", class: "btn btn-primary" %>
      <% end %>
      <%= link_to 'Cancel', bookings_path %>
    </div>
  </div>
</div>
