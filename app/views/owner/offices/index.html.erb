<div style="background-color: rgba(237, 30, 30,0.02 );">
  <h1 style="margin-top: 0px; margin-left: 1em">My Offices</h1>
  <div style="margin-top: 0px; margin-left:2.5em"=><%= link_to '+ Add an Office', new_office_path %></div>

  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <% @offices.each do |office| %>
      <div>
        <div class="office-card owner-bookings-cards border-radius">
          <div class="card-img image-border-radius" style="background-image: linear-gradient(-200deg, rgba(0,0,0,0.1) 10%, rgba(0,0,0,0.6) 70%), url(<%= cl_image_path(office.photo) %>);">
            <%= link_to "Edit my office", edit_office_path(office), class:"btn btn-primary" %>
          </div>
          <div class="card-description">
            <p class="desc"> <%= office.name %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>

