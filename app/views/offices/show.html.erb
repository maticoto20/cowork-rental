<%= link_to '< Back', offices_path %>

<h1><%= @office.name %></h1>
<%= link_to 'Book', new_office_booking_path(@office) %>
<% if policy(@office).edit? %>
  <%= link_to 'Edit', edit_office_path(@office) %>
<% end %>
<p><%= @office.price %></p>
<p><%= @office.workspace_type %></p>
<p><%= @office.number_of_seats %></p>
<h4>Facilities</h4>
<ul>
  <% if @office.wifi %>
    <li>Wifi <i class="fas fa-check"></i></li>
  <% end %>
  <% if @office.coffee %>
    <li>Coffee <i class="fas fa-check"></i></li>
  <% end %>
  <% if @office.lockers %>
    <li>Lockers <i class="fas fa-check"></i></li>
  <% end %>
  <% if @office.kitchen %>
    <li>Kitchen <i class="fas fa-check"></i></li>
  <% end %>
</ul>
