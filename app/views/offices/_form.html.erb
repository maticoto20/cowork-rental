<div class="offices-new">
  <h1>Create a new office</h1>
  <%= simple_form_for @office do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :price, input_html: { min: 0, max: 5000 } %>
  <%= f.input :workspace_type %>
  <%= f.input :number_of_seats, input_html: { min: 0, max: 500 } %>
  <table>
    <tbody>
      <tr>
<th>  <%= f.input :wifi, as: :boolean %></th>
<th>  <%= f.input :coffee, as: :boolean %></th>
<th>  <%= f.input :lockers, as: :boolean %></th>
<th>  <%= f.input :kitchen, as: :boolean %></th>
</tr>
  </tbody>
  </table>
  <%= f.submit class:"btn btn-primary" %>
  <% end %>
  <%= link_to 'Cancel', offices_path %>
</div>
