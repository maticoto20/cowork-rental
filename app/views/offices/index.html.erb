<div class="containers-container">
  <div class="office-container">
  <h1 class="text-center"><%= link_to "Offices", offices_path %></h1>
  <%= link_to 'My offices', owner_offices_path, class:"btn btn-info" %>
  <%= link_to 'My rentals', owner_bookings_path, class:"btn btn-danger" %>
  <%= link_to 'My bookings', bookings_path, class:"btn btn-primary" %>
  <%= link_to '+ Add new office', new_office_path %>
    <div class="row">
      <% @offices.each do |office| %>
        <div class="col-xs-4">
          <%= link_to office_path(office), class:"office-card-link" do %>
            <div class="office-card">
              <div class="card-img" style="background-image: linear-gradient(-200deg, rgba(0,0,0,0.1) 10%, rgba(0,0,0,0.6) 70%), url(<%= asset_path('office_placeholder') %>);">
                <h3 class="title"><%= office.name %></h3>
              </div>
              <div class="card-description">
                <p class="desc"><%= office.workspace_type %>, <%= office.number_of_seats %> seat</p>
                <p class="price">$<%= office.price %>/day</p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div id="map" style="width: 30%; height: 100vh;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>

